<div class="container center-align">
    <div class="row">
        <h3>Kişi Düzenle</h3>
        <br />
        <form method="POST" action="/person/update">
            <div class="input-field col s6 offset-m3">
                <input value="<%= person._id %>" id="_id" name="_id" type="text" class="validate" readonly>
                <label for="_id">Person Id</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <input value="<%= person.namesurname %>" id="namesurname" name="namesurname" type="text" class="validate">
                <label for="namesurname">Ad Soyad</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <input value="<%= person.address %>" id="address" name="address" type="text" class="validate">
                <label for="address">Adres</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <input value="<%= person.username %>" id="username" name="username" type="text" class="validate">
                <label for="username">Kullanıcı Adı</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <input value="<%= person.password %>" id="password" name="password" type="text" class="validate">
                <label for="password">Şifre</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">add</i>Update
                    Person</button>
            </div>
        </form>
        <form method="POST" action="/person/delete">
            <div style="display: none;" class="input-field col s6 offset-m3">
                <input value="<%= person._id %>" id="_id" name="_id" type="text" class="validate">
                <label for="_id">Person Id</label>
            </div>
            <div class="input-field col s6 offset-m3">
                <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">delete</i>Delete
                    Person</button>
            </div>
            <div class="input-field col s6 offset-m3">
                    <blockquote>
                        <p><b>Not: </b> Oluşturduğunuz Kişilere Ait Fotoğraflar Veritabanından Silinir...</p>
                    </blockquote>
                </div>
        </form>
    </div>
</div>